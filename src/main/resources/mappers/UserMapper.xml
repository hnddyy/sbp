<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sbp.mapper.UserMapper">
	<select id="getLoginInfo" resultType="com.example.sbp.domain.User">
		SELECT	
			*
		FROM
			USER
		WHERE userId = #{userId}
	</select>
</mapper>